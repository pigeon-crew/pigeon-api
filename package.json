{
  "name": "ts-boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "setup": "yarn install && cd src/client && yarn install",
    "dev": "concurrently \"yarn server\" \"yarn client\"",
    "server": "ts-node-dev --respawn src/index.ts",
    "client": "cd src/client && yarn start",
    "start": "ts-node ./src/index.ts",
    "build": "tsc",
    "heroku-postbuild": "cd src/client && yarn install && yarn build"
  },
  "devDependencies": {
    "concurrently": "^5.2.0",
    "nodemon": "^2.0.4",
    "ts-node-dev": "^1.0.0-pre.49"
  },
  "dependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.7",
    "@types/express-status-monitor": "^1.2.1",
    "@types/mongoose": "^5.7.29",
    "@types/node": "^14.0.14",
    "@types/socket.io": "^2.1.8",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "cpx": "^1.5.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-status-monitor": "^1.3.3",
    "mongoose": "^5.9.21",
    "shortid": "^2.2.15",
    "socket.io": "^2.3.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  }
}
